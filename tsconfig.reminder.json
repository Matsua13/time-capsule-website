{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "~/*": ["app/*"]
    },
    "allowImportingTsExtensions": true
  },
  "include": [
    "reminder-job.ts",
    "app/utils/db.server.ts",
    "app/utils/email.server.ts"
  ]
}
